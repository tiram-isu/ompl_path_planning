# Use NVIDIA's CUDA base image with Ubuntu
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu20.04

# Install Python and pip
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip to the latest version
RUN pip3 install --upgrade pip

# Install PyTorch with CUDA 11.8 support
# Install compatible versions of torchvision and other dependencies
RUN pip3 install torch==2.1.2+cu118 torchvision==0.16.2+cu118 --extra-index-url https://download.pytorch.org/whl/cu118 \
    && pip3 install networkx==2.5

# If you need to install additional packages, specify versions compatible with Python 3.8
# RUN pip3 install <other-packages>
